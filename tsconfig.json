{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2017"],
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "coverage", "dist", "scripts", "/**/*.test.ts"]
}
